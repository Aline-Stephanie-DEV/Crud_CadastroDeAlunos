@model EM.Web.Models.AlunoViewModel

@{
    ViewData["Title"] = "Tabela de Alunos";
}

 <h1>Tabela de Alunos <a class="btn btn-dark" style="background-color:#2e8b57 ; float:right" asp-action="Create">Adicionar Aluno</a>
 </h1> 
<hr />
  
<form asp-action="Pesquisar">
    <input asp-for="Pesquisa" class="form-control" style="width:25%" placeholder="Pesquisa por nome ou matricula"> 
    <input class="btn btn-dark" style="background-color:#2e8b57; width:7%" type="submit" value="Pesquisar"> 
</form>

<hr />

<style>
table, th, td {
   
  border: 1px solid;  
  border-color: white;
  
  text-align: center;
}
</style>

<table class="table table-striped table-hover">
    
    <thead style="background-color: mediumseagreen ; color:white" >
        <tr>
            <th style="width: 8%;">
                @Html.DisplayNameFor(model => model.Matricula)
            </th>
            <th style="width: 41%;">
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th style="width: 8%;">
                @Html.DisplayNameFor(model => model.Sexo)
            </th>
            <th style="width: 10%;">
                @Html.DisplayNameFor(model => model.Nascimento)
            </th>
            <th style="width: 20%;">
                @Html.DisplayNameFor(model => model.CPF)
            </th>
            <th style="width: 13%;"> Opções </th>
        </tr>
    </thead>
    <tbody>
@foreach (var model1 in Model.Alunos) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => model1.Matricula)
            </td>
            <td style="text-align:left">
                @Html.DisplayFor(modelItem => model1.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => model1.Sexo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => model1.Nascimento)
            </td>
             <td>
                @Html.DisplayFor(modelItem => model1.CPF.Valor)
            </td>
            <td>
                <a class="btn btn-dark" style="background-color:#2e8b57" asp-action="Edit" asp-route-id="@model1.Matricula">Editar</a> 
                <a class="btn btn-dark" style="background-color:#adb5bd" asp-action="Delete" asp-route-id="@model1.Matricula">Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>